<a href="/" class="btn btn-block btn-outline-secondary">
  Home
</a>

<h1> List of all Movies </h1>

<%= @list_of_movies.each do |a_thing| %>


<table border = "1">
  <tr>
    <td><%= a_thing.id %></td>
    <td>
      <img src = "http://robohash.org/<%= a_thing.image %>">
    </td>
    <td><%= a_thing.title %></td>
    <td><%= a_thing.year %></td>

    <td>
      <% d = Director.where({ :id => a_thing.director_id }).at(0) %>
      <%= d.name %>
      </td>
    <td> 
      <a href="/movies/<%= a_thing.id %>">
        Show details
      </a>
    </td>
  </tr>

<% end %>
</table>
